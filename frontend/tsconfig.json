{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "paths": {
      "~/components/*": ["./components/*"],
      "~/constants/*": ["./constants/*"],
      "~/layouts/*": ["./layouts/*"],
      "~/pages/*": ["./pages/*"],
      "~/stores/*": ["./stores/*"],
      "~/types/*": ["./types/*"],
      "~/utils/*": ["./utils/*"]
    },
    "types": ["vitest/globals", "node"]
  },
  "extends": ["../tsconfig.base.json"],
  "include": ["src", "setup-vitest.ts", "__tests__", "__mocks__"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
